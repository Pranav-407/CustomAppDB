<div class="modal fade" id="AddUserModal" tabindex="-1" role="dialog" aria-labelledby="AddUserModalLabel"
     aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">

    <div class="modal-dialog modal-custom-large" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <div class="modal-title-wrapper d-flex align-items-center">
                    <h5 class="modal-title mb-0">Add User</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-0">

                <div class="apps-header">
                    <div class="apps-title-row mb-2">
                        <div class="apps-title">Add User</div>
                    </div>
                </div>

                <form id="addUserForm">
                    <div class="form-section">
                        <div class="form-group">
                            <label class="form-label" for="fullName">Full Name</label>
                            <input type="text" class="form-control fullName" id="fullName" name="FullName" placeholder="Full Name" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="emailAddress">Email Address</label>
                            <input type="email" class="form-control" id="emailAddress" name="EmailAddress" placeholder="Email Address" required>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="disabled" name="IsDisabled" value="true">
                            <input type="hidden" name="IsDisabled" value="false">
                            <label class="form-check-label" for="disabled"> Disabled </label>
                        </div>

                        <div class="section-title">Access Control</div>

                        <div class="section-subtitle">Configure permissions for selected users</div>

                        <div class="row">

                            <div class="form-group col-md-5">
                                <label class="form-label" for="role">Role</label>
                                <select class="form-control" id="role" name="Role" required>
                                    <option value="Super Administrator" selected>Super Administrator</option>
                                    <option value="Administrator">Administrator</option>
                                    <option value="Limited Administrator">Limited Administrator</option>
                                    <option value="Remote Support">Remote Support</option>
                                    <option value="Report Viewer">Report Viewer</option>
                                </select>
                                <div class="role-info" id="roleInfo" style="display: none;"></div>
                            </div>

                            <!-- Sites only dropdown for Administrator -->
                            <div class="col-md-6" id="siteOnlyAccessContainer" style="display: none;">
                                <label class="form-label">Site Access</label>
                                <div class="custom-dropdown" id="siteOnlyDropdown">
                                    <div class="dropdown-btn">
                                        SITES SELECTED: <span id="siteOnlyCount" class="count">0</span>
                                    </div>
                                    <div class="dropdown-content">
                                        <div class="dropdown-columns">
                                            <div class="column">
                                                <h4>Sites</h4>
                                                <label><input type="checkbox" class="site-only"> Site 1</label>
                                                <label><input type="checkbox" class="site-only"> Site 2</label>
                                                <label><input type="checkbox" class="site-only"> Site 3</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sites and Groups dropdown for other roles -->
                            <div class="col-md-6" id="siteAccessContainer">
                                <label class="form-label">Site and Group Access</label>
                                <div class="custom-dropdown" id="siteGroupDropdown">
                                    <div class="dropdown-btn">
                                        SITES SELECTED: <span id="siteCount" class="count">0</span> &nbsp;
                                        GROUPS SELECTED: <span id="groupCount" class="count">0</span>
                                    </div>
                                    <div class="dropdown-content">
                                        <div class="dropdown-columns">
                                            <div class="column">
                                                <h4>Sites</h4>
                                                <label><input type="checkbox" class="site"> Site 1</label>
                                                <label><input type="checkbox" class="site"> Site 2</label>
                                                <label><input type="checkbox" class="site"> Site 3</label>
                                            </div>
                                            <div class="column">
                                                <h4>Groups</h4>
                                                <label><input type="checkbox" class="group"> Group 1</label>
                                                <label><input type="checkbox" class="group"> Group 2</label>
                                                <label><input type="checkbox" class="group"> Group 3</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="features-section" id="featuresSection">
                            <div class="features-header d-flex align-items-center justify-content-between mb-2">
                                <div class="features-title mb-0">
                                    Features
                                    <span class="section-subtitle mb-0" id="featuresSubtitle">(Please Select at least one feature) </span>
                                </div>
                            </div>

                            <div id="administratorFeatures" style="display: none;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="allowUserManagement" name="AllowUserManagement" value="true">
                                    <input type="hidden" name="AllowUserManagement" value="false">
                                    <label class="form-check-label" for="allowUserManagement"> Allow User Management</label>
                                </div>
                            </div>

                            <div id="Features" style="display: none;">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Applications" name="Applications" value="true">
                                            <label class="form-check-label" for="Applications">Applications</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="OS Deployment" name="OSDeployment" value="true">
                                            <label class="form-check-label" for="OS Deployment">OS Deployment</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Download Agent" name="DownloadAgent" value="true">
                                            <label class="form-check-label" for="Download Agent">Download Agent</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Task History" name="TaskHistory" value="true">
                                            <label class="form-check-label" for="Task History">Task History</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Inventory" name="Inventory" value="true">
                                            <label class="form-check-label" for="Inventory">Inventory</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Ticketing" name="Ticketing" value="true">
                                            <label class="form-check-label" for="Ticketing">Ticketing</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Anti-Virus" name="AntiVirus" value="true">
                                            <label class="form-check-label" for="Anti-Virus">Anti-Virus</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="MDM" name="MDM" value="true">
                                            <label class="form-check-label" for="MDM">MDM</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Windows Updates" name="WindowsUpdates" value="true">
                                            <label class="form-check-label" for="Windows Updates">Windows Updates</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Policies" name="Patches" value="true">
                                            <label class="form-check-label" for="Policies">Policies</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Remote Connect" name="RemoteConnect" value="true">
                                            <label class="form-check-label" for="Remote Connect">Remote Connect</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="Computers" name="Computers" value="true">
                                            <label class="form-check-label" for="Computers">Computers</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="d-flex justify-content-between align-items-center p-2">
                    <button type="button" class="btn btn-dark cancel-btn btn-sm" data-bs-dismiss="modal"> CANCEL </button>
                    <button type="button" class="btn btn-dark submit-btn btn-sm" data-dismiss="modal" id="SubmitBtn">SUBMIT</button>
                </div>
            </div>
        </div>
    </div>
</div>