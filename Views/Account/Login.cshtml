@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Faronics Deploy - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        .login-box input[type="text"],
        .login-box input[type="email"],
        .login-box input[type="password"] {
            margin-bottom: 10px;
            border-radius: 8px;
            height: 36px;
            font-size: 1rem;
        }
    </style>
</head>
<body class="bg-white">

    <!-- 🔴 NAVBAR WITH LOGO -->
    <nav class="navbar navbar-dark bg-black px-4 py-2">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/assets/images/logo.png" alt="Faronics Logo" height="30" />
        </a>
    </nav>

    <!-- 🔵 MAIN LOGIN CONTAINER -->
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center min-vh-100 px-5">

            <!-- 🔴 LEFT: VIDEO -->
            <div class="col-md-5 text-start mb-4 mb-md-0">
                <video autoplay muted loop playsinline class="w-100 rounded shadow">
                    <source src="~/assets/videos/faronicsdeploy.mp4" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            </div>

            <!-- 🔵 RIGHT: LOGIN FORM -->
            <div class="col-md-5">
                <div class="login-box p-4 border rounded shadow-sm">
                    <div class="mb-4">
                        <h4 class="fw-bold">A whole new way to manage software.</h4>
                        <p class="text-muted">Install, Update and Control within seconds.</p>
                    </div>

                    <!-- Login Form -->
                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <input type="text" name="Username" class="form-control" placeholder="Username" required />
                            <input type="password" name="Password" class="form-control" placeholder="Password" required />
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <div></div>
                            <a href="#" class="small text-decoration-none">Forgot Password?</a>
                        </div>

                        <div class="mb-2 form-check">
                            <input type="checkbox" class="form-check-input" id="agree" required />
                            <label class="form-check-label" for="agree">
                                By signing in, I agree to the <a href="#">Terms of Service</a>
                            </label>
                        </div>

                        <div class="d-grid mt-3">
                            <button class="btn btn-primary fw-semibold">SIGN IN</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="small">Don't have an account? <a href="/Account/Signup">Create one</a></p>
                        </div>

                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Message</div>
                        }
                    </form>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
