@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            overflow-x: hidden;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

            /* Remove scrollbar */
            body::-webkit-scrollbar {
                display: none;
            }

        body {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        /* Navbar */
        .navbar {
            background-color: #1a1a1a !important;
            padding: 15px 30px;
            height: 60px;
        }

        /* Main container */
        .main-container {
            min-height: calc(100vh - 60px);
            background: #f8f9fa;
            display: flex;
            align-items: center;
            padding: 0;
        }

        .content-row {
            width: 100%;
            max-width: 1300px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            gap: 80px;
            padding: 0 60px;
        }

        /* Left side - Video */
        .video-section {
            flex: 1;
            max-width: 500px;
        }

            .video-section video {
                width: 100%;
                height: auto;
            }

        /* Right side - Login form */
        .login-section {
            max-height: 380px;
            flex: 1;
            max-width: 500px;
        }

        .login-box {
            background: white;
            border-radius: 12px;
        }

        .login-title {
            font-size: 28px;
            font-weight: 700;
            color: #212529;
        }

        .login-subtitle {
            color: #6c757d;
            font-size: 16px;
        }

        /* Login method radio buttons */
        .login-methods {
            margin-bottom: 20px;
        }

            .login-methods label {
                font-size: 14px;
                color: black;
                font-weight: 600;
            }

        .radio-group {
            display: flex;
            gap: 24px;
            margin-top: 8px;
        }

        .radio-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .radio-item input[type="radio"] {
                width: 18px;
                height: 18px;
                margin: 0;
            }

            .radio-item label {
                margin: 0;
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                font-weight: normal;
            }

        /* Form inputs */
        .form-control {
            height: 40px;
            border-radius: 8px;
            border: 1px solid #ced4da;
            font-size: 14px;
            padding: 12px 16px;
            margin-bottom: 15px;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
            }

            .form-control::placeholder {
                color: #adb5bd;
            }

        /* Forgot password */
        .forgot-password {
            margin: -10px 0 0 0;
            text-align: right;
        }

            .forgot-password a {
                color: #007bff;
                text-decoration: none;
                font-size: 14px;
            }

                .forgot-password a:hover {
                    text-decoration: underline;
                }

        /* Terms checkbox */
        .terms-check {
            display: flex;
            align-items: center;
            gap: 8px;
            margin: 18px 0px;
            font-size: 15px;
            line-height: 1.4;
        }

            .terms-check input[type="checkbox"] {
                margin-top: 2px;
                width: 16px;
                height: 16px;
            }

            .terms-check label {
                margin: 0;
                color: #495057;
            }

            .terms-check a {
                color: #007bff;
                text-decoration: none;
            }

                .terms-check a:hover {
                    text-decoration: underline;
                }

        /* Sign in button */
        .btn-signin {
            margin-left: 50px;
            width: 25%;
            height: 48px;
            background: #007bff;
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 14px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: background-color 0.2s;
        }

            .btn-signin:hover {
                background: #0056b3;
            }

        /* Create account */
        .create-account {
            border-top: 1px solid #cfcfcf;
            text-align: center;
            padding-top: 20px;
            font-size: 14px;
            color: #6c757d;
        }

            .create-account a {
                color: #007bff;
                text-decoration: none;
            }

                .create-account a:hover {
                    text-decoration: underline;
                }

        /* Error message */
        .alert {
            border-radius: 8px;
            margin-top: 16px;
        }

        /* Disabled state for non-email login */
        .form-disabled {
            opacity: 0.6;
            pointer-events: none;
        }
    </style>
</head>
<body class="bg-white">
    <!-- Navbar with logo -->
    <nav class="navbar navbar-dark bg-black px-4 py-2">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/assets/images/logo.png" alt="Faronics Logo" height="30" />
        </a>
    </nav>

    <!-- Main login container -->
    <div class="main-container">
        <div class="content-row">
            <!-- Left: Video -->
            <div class="video-section">
                <video autoplay muted loop playsinline>
                    <source src="~/assets/videos/faronicsdeploy.mp4" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            </div>

            <!-- Right: Login form -->
            <div class="login-section">
                <div class="login-box">
                    <div class="mb-4">
                        <h1 class="login-title">A whole new way to manage software.</h1>
                        <p class="login-subtitle">Install, Update and Control within seconds.</p>
                    </div>

                    <!-- Login method selection -->
                    <div class="login-methods">
                        <label>Log in with:</label>
                        <div class="radio-group">
                            <div class="radio-item">
                                <input type="radio" id="email-login" name="loginMethod" value="email" checked onchange="toggleLoginMethod()">
                                <label for="email-login">Email and Password</label>
                            </div>
                            <div class="radio-item">
                                <input type="radio" id="ad-login" name="loginMethod" value="ad" onchange="toggleLoginMethod()">
                                <label for="ad-login">AD Credentials</label>
                            </div>
                            <div class="radio-item">
                                <input type="radio" id="saml-login" name="loginMethod" value="saml" onchange="toggleLoginMethod()">
                                <label for="saml-login">SAML</label>
                            </div>
                        </div>
                    </div>

                    <!-- Login Form -->
                    <form asp-action="Login" method="post" id="loginForm">
                        <div id="emailPasswordForm">
                            <input type="email" name="email" class="form-control" placeholder="Email Address" required />
                            <input type="password" value="1234" name="password" class="form-control" placeholder="Password" required />

                            <div class="forgot-password">
                                <a href="#">Forgot Password?</a>
                            </div>

                            <div class="terms-check">
                                <label for="agree">
                                    By signing in, I agree to the <a href="#">Terms of Service</a>
                                </label>
                                <button type="submit" class="btn-signin">SIGN IN</button>
                            </div>


                        </div>

                        <div class="create-account">
                            <span>Don't have an account? <a href="#">Sign Up</a></span>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>